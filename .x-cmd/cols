#! xsh
# shellcheck shell=bash disable=SC1091,SC2034

###
 # @description: test color list
 # @example: look all fg color                                          `x cols`
 # @example: fixed background color. To test different fontend color    `x cols fg rgbbg-119`
 # @example: fixed fontend color.To test different background color     `x cols bg rgbfg-118`
###
# Section: Args
xrc ui
MOCK_TEXT='x_cmd_rgb_color_list'
# EndSection


# Section: run
###
 # @description: show all color
###
test_rgb_fg(){
    for color in {000..255}; do
        printf "%s: %s\n" \
            "$color" \
            "$(ui rgbfg-"$color" "$MOCK_TEXT")"
    done
}

###
 # @description: fixed fontend color
###
test_fixed_fg(){
    for color in {000..255}; do
        printf "%s: %s\n" \
            "$color" \
            "$(ui rgbbg-"$color" "$1" " $MOCK_TEXT ")"
    done
}

###
 # @description: fixed backgound color
###
test_fixed_bg(){
    for color in {000..255}; do
        printf "%s: %s\n" \
            "$color" \
            "$(ui "$1" rgbfg-"$color" " $MOCK_TEXT ")"
    done
}


case "${1}" in
    fg)
        test_fixed_bg "${2-"bg-yellow"}"
    ;;
    bg)
        test_fixed_fg "${2-"black"}"
    ;;
    *)
        test_rgb_fg
    ;;
esac

# EndSection
